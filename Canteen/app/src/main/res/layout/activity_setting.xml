<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Setting">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coba"
        android:padding="20dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/header"
            android:gravity="center"
            android:padding="10dp"
            android:text="Pengaturan Warung"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/add_menu_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/addback"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/margin"
                android:scaleType="centerCrop"
                android:src="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masukkan Gambar Background Warung Anda!!"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/ritangel"
            android:paddingTop="@dimen/input">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addmnuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="Nama Penjual.."
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/margin" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/ritangel"
            android:paddingTop="@dimen/input">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addNamaWarung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin"
                android:hint="Nama warung.."
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/margin" />
        </com.google.android.material.textfield.TextInputLayout>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.appcompat.widget.AppCompatButton

               android:gravity="center"
               android:id="@+id/addbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/atas"
               android:layout_margin="@dimen/margin"
               android:textStyle="bold"
               android:text="Simpan"
               android:textSize="20dp"
               android:background="@drawable/button"
               android:textColor="@color/blue"/>
           <androidx.appcompat.widget.AppCompatButton
               android:layout_alignParentRight="true"
               android:gravity="center"
               android:id="@+id/btnbatal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/atas"
               android:layout_margin="@dimen/margin"
               android:text="Batal"
               android:textStyle="bold"
               android:textSize="20dp"
               android:background="@drawable/button"
               android:textColor="@color/blue" />
       </RelativeLayout>

    </LinearLayout>

</ScrollView>